<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="alert-success">
      <%= flash[:success] unless flash[:success].blank? %>
    </div>
    <div class="alert-danger">
      <%= flash[:error] unless flash[:error].blank? %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1>Welcome to Contactually</h1>
          <h3>Please upload file containing list of contacts</h3>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">
            <%= form_tag("/contacts/upload", :multipart => true) do %>
            <label class="btn btn-default btn-file">
              <%= file_field_tag :file, :accept => 'text/csv' %>
            </label>
            <br/><br/>
            <%= submit_tag 'Upload', :class => "btn btn-default btn-lg btn-success", disabled: true%>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>